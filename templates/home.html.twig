								{% endif %}
								<h3>{{product.libelle}}
								</h3>
								<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit...
								</p>
								<h6>{{product.prix | number_format(2, '€') }}</h6>
								<ul>
									<li>
										<i class="bi bi-star-fill"></i>
									</li>
									<li>
										<i class="bi bi-star-fill"></i>
									</li>
									<li>
										<i class="bi bi-star-fill"></i>
									</li>
									<li>
										<i class="bi bi-star-fill"></i>
									</li>
									<li>
										<i class="bi bi-star-fill"></i>
									</li>
								</ul>
								<button class="add_card">
									<a href="{{path('app_show', {id : product.id})}}">
										<i class="bi bi-eye" style="color: grey"></i>
									</a>
									<a href="#">
										<i class="bi bi-heart" style="color : white"></i>
									</a>
									<a href="{{path('panier_add', {id: product.id})}}">
										<i class="bi bi-cart-plus" style="color: black"></i>
									</a>
								</button>
							</div>
						{% endfor %}
					</div>
				</div>
				<div class="tab-pane fade" id="messages">
					<div class="product_list">
						{% for product in products |reverse %}
							<div class="card_product">
								{% if product.image %}

									<img src="{{asset('assets/images/produits/'~ product.image)}}" alt="image produit" height="140px">
								{% else %}
									<img src="{{asset('assets/images/produits/default.png')}}" alt="image produit" height="140px">

								{% endif %}
								<h3>{{product.libelle}}
								</h3>
								<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit...
								</p>
								<h6>{{product.prix | number_format(2, '€') }}</h6>
								<ul>
									<li>
										<i class="bi bi-star-fill"></i>
									</li>
									<li>
										<i class="bi bi-star-fill"></i>
									</li>
									<li>
										<i class="bi bi-star-fill"></i>
									</li>
									<li>
										<i class="bi bi-star"></i>
									</li>
									<li>
										<i class="bi bi-star"></i>
									</li>
								</ul>
								<button class="add_card">
									<a href="{{path('app_show', {id : product.id})}}">
										<i class="bi bi-eye" style="color: grey"></i>
									</a>
									<a href="#">
										<i class="bi bi-heart" style="color : white"></i>
									</a>
									<a href="{{path('panier_add', {id: product.id})}}">
										<i class="bi bi-cart-plus" style="color: black"></i>
									</a>
								</button>
							</div>
						{% endfor %}


					</div>
				</div>
			</div>


		</section>
		<hr>
		<section class="fabricants">

			<div class="row d-flex justify-content-around">
				<h2 class="text-center">Nos fabricants
				</h2>
				{% for fabricant in fabricants %}
					<div class="col-lg-2 col-md-3 col-sm-4 m-2 ">
						<a href="#">
							<img src="{{asset('assets/images/fabricants/' ~ fabricant.image)}}" alt="{{fabricant.nom}}" width="200px">
						</a>
					</div>
				{% endfor %}
			</div>
		</section>

	</div>


