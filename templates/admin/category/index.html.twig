{% extends 'admin/base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block content %}


	<div class="head_main">
		<h1>Liste des catégories</h1>
		{% for message in app.flashes('success') %}

		<div class="dialogue_flash" id="alertMessage">
			{{message}}
		</div>

		{% block javascripts %}
				<script>
					var div1 = document.getElementById('alertMessage');

					showMessage(div1.innerHTML)
				</script>

			{% endblock %}
	{% endfor %}
		

	{% endfor %}

	</div>

	<div class="details">
		<div class="recentOrders">

			<div class="cardHeader">
				<h2>Catégories</h2>
				<a href="{{path('app_new_category')}}" class="btn">Nouveau</a>
			</div>
			{% if categories is empty %}
				<div class="data_empty">
					<h3>Pas de données à afficher
					</h3>
				</div>
			{% else %}
				<table>
					<thead>
						<tr>
							<td>#ID</td>
							<td>Image</td>
							<td>Libellé</td>
							<td>Date création</td>
							
							<td>Actions</td>

						</tr>
					</thead>
					<tbody>

						{% for category in categories %}

							<tr>
								<td>{{category.id}}</td>
								<td>
									<img src="{{asset("assets/images/categories/" ~ category.image)}}" alt="{{category.libelle}}" width="120px">
								</td>
								<td>{{category.libelle}}</td>
								<td>{{category.createdAt | date("d/m/Y", "Europe/Paris") }}</td>
								<td style="display: table-cell;">
									<div style="display: flex;justify-content: space-around;">
										<a href="{{path('app_update_category', {'id': category.id})}}" class="btn btn_edit">
											<i class="fa fa-pencil" aria-hidden="true"></i>
										</a>
										<a href="{{path('app_delete_category', {'id': category.id})}}" class="btn btn_delete">
											<i class="fa fa-trash" aria-hidden="true"></i>
										</a>
									</div>
								</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>
				{{ knp_pagination_render(categories) }}
			{% endif %}
		</div>
		<div class="recentCustomers">
			<div class="cardHeader">
				<h2>Statistiques</h2>
			</div>
			<table>
				<tbody>
				{% for category in categories %}
					
					<tr>
						<td width="60px">
							<div class="imgBx">
								<img src="{{asset('assets/images/user.png')}}" alt="" srcset=""/>
							</div>
						</td>
						<td>
							<h4>{{category.libelle}}<br/><span>Total produits : {{category.products | length}}</span>
							</h4>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
