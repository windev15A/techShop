{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block content %}
	<div class="container mt-3 bg-light rounded p-5">
		<form method="post">
			<div class="d-md-flex justify-content-between">
				<h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
				<h3>Pas encors de compte ?
					<a href="{{path('app_register')}}">S'inscrire</a>
				</h3>
			</div>
			<hr>
			<div class="col-10 mx-auto">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
			</div>
			<div class="row d-md-flex align-items-center px-5 ">
				<div class="col-md-6 col-sm-12">

					<img src="{{asset('assets/images/login.svg')}}" alt="" srcset="" style="width: 80%;">


				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group">
						<label for="email">Email</label>
						<input type="email" name="email" id="email" class="form-control" placeholder="Saisir votre Email" aria-describedby="helpId">
					</div>
					<div class="form-group">
						<label for="password">Mot de passe</label>
						<input type="password" name="password" id="password" class="form-control" placeholder="Saisir votre mot de passe" aria-describedby="helpId">
					</div>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
																	        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																	        See https://symfony.com/doc/current/security/remember_me.html
																	
																	        <div class="checkbox mb-3">
																	            <label>
																	                <input type="checkbox" name="_remember_me"> Remember me
																	            </label>
																	        </div>
																	    #}

					<button class="btn  btn-primary mt-3 btn-lg" type="submit">
						Se connecter
					</button>
				</div>

			</div>
		</form>
	</div>
{% endblock %}
