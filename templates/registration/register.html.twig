{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block content %}
<div class="container">
	<h1>S'inscrire</h1>
	<hr>

	<div class="row d-md-flex align-items-center">
		<div class="col-md-6 col-sm-12 position-relative">
            <img src="{{asset('assets/images/register.svg')}}" alt="image inscription">
        
        <h4 class="position-absolute" style="rotate: 20deg; top: 10%;left: 42%;color: #a7bb60;font-size: 2vw;">TECHSHOP</h4>
        </div>
		<div class="col-md-6 col-sm-12">
			{{ form_start(registrationForm) }}
			{{form_row(registrationForm.nom)}}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe '
        }) }}
			{{ form_row(registrationForm.agreeTerms, {label:  "J’ai lu et accepte la politique de confidentialité du site."}) }}

			<button type="submit" class="btn btn-success">S'inscrire</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
</div>
{% endblock %}
